<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_process_routing_wizard_form" model="ir.ui.view">
            <field name="name">process.routing.wizard.form</field>
            <field name="model">process.routing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id" options='{"no_open": False, "no_create": True,"no_edit": True}'
                                   widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_pdf" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>