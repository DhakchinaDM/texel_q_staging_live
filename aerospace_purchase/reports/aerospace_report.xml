<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="paperformat_aerospace_purchase_order_report_new" model="report.paperformat">
            <field name="name">Aerospace Purchase Order Report</field>
            <field name="default" eval="False"/>
            <field name="disable_shrinking" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">140</field>
        </record>

        <record id="report_aerospace_purchase_order_report" model="ir.actions.report">
            <field name="name">Aerospace Purchase Order Report</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">aerospace_purchase.aerospace_purchase_order_report_header</field>
            <field name="report_file">aerospace_purchase.aerospace_purchase_order_report_header</field>
            <field name="paperformat_id" ref="aerospace_purchase.paperformat_aerospace_purchase_order_report_new"/>
            <field name="print_report_name">'Aerospace Purchase Order Report'</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>

